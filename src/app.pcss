@tailwind base;
@tailwind components;
@tailwind utilities;

button,
textarea,
input,
select,
a {
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    -webkit-tap-highlight-color: transparent;
}

button:active {
	transform: scale(0.96);
}

.space {
    height: 12px;
}

:root {
    --light-text: #AAAAAA;
    --dark-text: #5C5F62;
}

.light {
    --light-text: #9AA3AB;
}